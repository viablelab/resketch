{
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "storybook"
  ],
  "devDependencies": {
    "lerna": "^3.10.7",
    "lerna-changelog": "^0.8.2",
    "prettier": "^1.14.3"
  },
  "dependencies": {
    "@resketch/css": "*",
    "@resketch/react": "*"
  },
  "scripts": {
    "build": "lerna run build",
    "changelog": "lerna-changelog",
    "export": "yarn workspace @local/storybook build",
    "prettier:base": "prettier packages/**",
    "prettier:check": "npm run prettier:base -- --list-different",
    "prettier:write": "npm run prettier:base -- --write",
    "test": "lerna run test"
  }
}
